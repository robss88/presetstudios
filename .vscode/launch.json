{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Launch and Debug React App",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "npm: start",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}